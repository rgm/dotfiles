# vim: syntax=gitconfig ft=gitconfig

[user]
  name         = Ryan McCuaig
  email        = ryan@ryanmccuaig.net

[color]
  diff         = auto
  status       = auto

[core]
  autocrlf     = input
  quotepath    = false
  excludesfile = /Users/rgm/.gitignore

[log]
  abbrevcommit = true

[alias]
  aa           = add --all
  ap           = add --patch
  st           = status -sb
  ci           = commit --verbose
  ca           = commit --amend --verbose
  br           = branch
  co           = checkout
  lg           = log -p
  sg           = diff --cached
  dc           = staged
  di           = diff
  ds           = diff --stat=160,120
  dh1          = diff HEAD~1
  pff          = pull --ff-only
  unstage      = reset HEAD --
  last         = log -1 -p HEAD
  l2w          = log --since 2.weeks.ago --pretty=oneline --abbrev-commit --decorate
  l            = log --pretty=oneline --abbrev-commit --decorate
  lll          = log --pretty=oneline --abbrev-commit --graph --decorate
  added        = diff --cached --name-only
  dt           = difftool

  dts          = difftool --cached
  ksreview     = "!sh -c 'SHA=${1:-HEAD}; BRANCH=${2:-master}; if [ $SHA == $BRANCH ] ; then SHA=HEAD; fi; BASE_SHA=$(git merge-base $BRANCH $SHA); git difftool $BASE_SHA $SHA;' -"
  ksshow       = "!sh -c 'SHA=${1:-HEAD}; git difftool $SHA^..$SHA;' -"

  snapshot     = !git stash save "snapshot: $(date)" && git stash apply "stash@{0}"
  rev          = merge --no-commit --no-ff

  # logging from DAS
  h            = !git head
  head         = !git l -1
  hp           = "!. ~/.githelpers && show_git_head"
  la           = !git l --all
  ll           = "!. ~/.githelpers && pretty_git_log"
  merc         = merge --no-ff
  pa           = pull --autostash
  r            = !git l -30
  ra           = !git r --all

[github]
  user         = !cat ~/.github_user
  token        = !cat ~/.github_token

[gist]
  private      = yes
  browse       = yes

[credential]
  helper = osxkeychain

[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"

[difftool]
  prompt = false

[diff]
  ;tool = p4mergetool
  tool = Kaleidoscope
  algorithm = patience
  compactionHeuristic = true

[mergetool]
  prompt = false
  keepBackup = false

[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustExitCode = true

[merge]
  ; tool = p4mergetool
  tool = Kaleidoscope

[mergetool "p4mergetool"]
  cmd = /Applications/Perforce/p4merge.app/Contents/Resources/launchp4merge $PWD/$BASE $PWD/$REMOTE $PWD/$LOCAL $PWD/$MERGED
  trustExitCode = false

[difftool "p4mergetool"]
  cmd = /Applications/Perforce/p4merge.app/Contents/Resources/launchp4merge $LOCAL $REMOTE

[push]
  default = upstream

[init]
  templatedir = ~/.git_template

[pull]
  rebase = true

[rerere]
  enabled = true

[help]
  autocorrect = 1

[filter "media"]
  required = true
  clean = git media clean %f
  smudge = git media smudge %f

[filter "hawser"]
  clean = git hawser clean %f
  smudge = git hawser smudge %f
  required = true

[filter "lfs"]
  clean = git lfs clean %f
  smudge = git lfs smudge %f
  required = true
[commit]
	template = /Users/rgm/.git_commit_template
