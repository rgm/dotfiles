# vim: syntax=gitconfig ft=gitconfig
[user]
  name = Ryan McCuaig
  email = rgm@ryanmccuaig.net
[color]
  diff = auto
  status = auto
[core]
	autocrlf = input
	quotepath = false
	excludesfile = /Users/rgm/.gitignore
[alias]
  st      = status -sb
  ci      = commit -v
  br      = branch
  co      = checkout
  df      = diff
  lg      = log -p
  staged  = diff --cached
  unstage = reset HEAD --
  last    = log -1 HEAD
  l       = log --pretty=oneline --abbrev-commit --graph --decorate
  added   = diff --cached --name-only
[git-tmbundle]
  gitx-path = "/usr/local/bin/gitx "
[github]
  user = !cat ~/.github_user
  token = !cat ~/.github_token
[gist]
  private = no
  browse = yes
[difftool "Kaleidoscope"]
  cmd = ksdiff-wrapper git \"$LOCAL\" \"$REMOTE\"
[difftool]
  prompt = false
[diff]
  tool = Kaleidoscope
  wordRegex = [^[:space:]]
